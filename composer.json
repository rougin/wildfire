{
    "name": "rougin/wildfire",
    "description": "Yet another wrapper for CodeIgniter's Query Builder Class",
    "keywords": [
        "codeigniter",
        "query",
        "builder",
        "php",
        "wildfire"
    ],
    "homepage": "https://github.com/rougin/wildfire",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "http://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.4.0",
        "rougin/describe": "~1.3",
        "rougin/spark-plug": "~0.4.2"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "rougin/codeigniter": "^3.0.0"
    },
    "autoload": {
        "psr-4": {
            "Rougin\\Wildfire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rougin\\Wildfire\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4-dev"
        }
    },
    "suggest": {
        "rougin/codeigniter": "Installs CodeIgniter core through Composer",
        "rougin/combustor": "A tool for speeding up workflow in CodeIgniter",
        "rougin/refinery": "\"Ready-to-eat\" migrations for CodeIgniter"
    }
}
